@model DesignPattern.CQRS.CQRSPattern.Commands.CreateProductCommand
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">

<form method="post">
    <br />
    <label>Ürün Adı</label>
    <input type="text" class="form-control" asp-for="Name"/>
    <br />
    <label>Ürün Stok</label>
    <input type="text" class="form-control" asp-for="Stock" />
    <br />
    <label>Ürün Fiyat</label>
    <input type="text" class="form-control" asp-for="Price" />
    <br />
    <label>Ürün Açıklama</label>
    <input type="text" class="form-control" asp-for="Description" />
    <br />
    <button class="btn btn-warning text-white">Ürün Ekle</button>
</form>
</div>
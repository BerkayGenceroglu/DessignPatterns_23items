@model List<DesignPattern.Mediator.MediatorPatternn.Results.GetAllProductQueryResult>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<div class="container">
    <br>
    <br>
    <br>
    <br>
    <table class="table table-bordered">
        <tr class="text-center">
            <td>#</td>
            <td>Ürün Adı</td>
            <td>Ürün Fiyatı</td>
            <td>Ürün Stok</td>
            <td>Ürün Stok Türü</td>
            <td>Ürün Kategori</td>
            <td>Sil</td>
            <td>Güncelle</td>
            <td>Detaylar</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.ProductId</td>
                <td>@item.ProductName</td>
                <td>@item.ProductPrice</td>
                <td>@item.ProductStock</td>
                <td>@item.ProductStockType</td>
                <td>@item.ProductCategory</td>
                <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Product/GetProduct/@item.ProductId" class="btn btn-dark">Detaylar</a></td>
            </tr>
        }
    </table>
    <a href="/Product/AddProduct" class="btn btn-success">Yeni Ürün Ekle</a>
</div>
